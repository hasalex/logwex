<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>logwex-example</artifactId>
    <name>LogWEx example</name>
    <description>Example for the Logging Extras for Web Applications</description>
    <packaging>war</packaging>

    <url>http://logwex.sewatech.org/${project.artifactId}</url>
    
    <parent>
        <groupId>org.sewatech.logwex</groupId>
        <artifactId>logwex-all</artifactId>
        <version>1.0-b03</version>
        <relativePath>../logwex-core/pom.xml</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.sewatech.logwex</groupId>
            <artifactId>logwex-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>httpunit</groupId>
            <artifactId>httpunit</artifactId>
            <version>1.7</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>rhino</groupId>
            <artifactId>js</artifactId>
            <version>1.7R2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>logwex-example</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/*HttpTest.java</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>run-http-tests</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <exclude>*</exclude>
                            </excludes>
                            <includes>
                                <include>**/*HttpTest.java</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <wait>false</wait>
                    <container>
                        <containerId>tomcat5x</containerId>
                        <zipUrlInstaller>
                            <url>
                                http://mir2.ovh.net/ftp.apache.org/dist//tomcat/tomcat-5/v5.5.31/bin/apache-tomcat-5.5.31.zip
                            </url>
                        </zipUrlInstaller>
                    </container>
                    <configuration>
                        <configfiles>
                            <configfile>
                                <file>${project.build.testOutputDirectory}/conf/tomcat-users.xml</file>
                                <todir>conf/</todir>
                            </configfile>
                        </configfiles>
                        <properties>
                            <cargo.logging>high</cargo.logging>
                            <cargo.servlet.port>9999</cargo.servlet.port>
                        </properties>
                    </configuration>
                </configuration>
                <executions>
                    <execution>
                        <id>start</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <site>
            <id>logwex-ssh</id>
            <url>scp://ftp.sewatech.org/homez.116/sewatech/org-sewatech-logwex/${project.artifactId}</url>
        </site>
    </distributionManagement>    

</project>